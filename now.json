{
  "version": 2,
  "name": "apollo-zeit",
  "regions": ["bru"],
  "builds": [
    { "src": "www/package.json", "use": "@now/next" },
    { "src": "graphql/index.js", "use": "@now/node@canary" }
  ],
  "routes": [
    { "src": "/graphql", "dest": "graphql/index.js" },
    { "src": "/(.*)", "dest": "www/$1" }
  ]
}
